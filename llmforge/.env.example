# LLMForge Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# GCP Configuration
# ============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCS_BUCKET=your-llmforge-bucket
GCS_OUTPUT_BUCKET=your-llmforge-bucket

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://llmforge:password@localhost:5432/llmforge
POSTGRES_USER=llmforge
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=llmforge

# ============================================================================
# MLflow Configuration
# ============================================================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=llmforge-experiments

# ============================================================================
# vLLM Deployment Configuration
# ============================================================================
MODEL_PATH=gs://your-bucket/models/llama-3.1-8b-finetuned
GPU_MEMORY_UTILIZATION=0.90
MAX_MODEL_LEN=8192

# ============================================================================
# API Configuration
# ============================================================================
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
SECRET_KEY=your-secret-key-for-jwt

# ============================================================================
# Hugging Face (optional, for private models)
# ============================================================================
HF_TOKEN=your-huggingface-token

# ============================================================================
# Vertex AI Configuration
# ============================================================================
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_STAGING_BUCKET=gs://your-staging-bucket
